-- Ensure the LocalScript runs in PlayerGui or CoreGui
if not game:GetService("RunService"):IsStudio() then
    local player = game:GetService("Players").LocalPlayer
    local playerGui = player:WaitForChild("PlayerGui") -- Ensure PlayerGui exists

    -- Parent the GUI to PlayerGui
    library.Parent = playerGui
end

-- Your library initialization
local library = loadstring(game:HttpGet("https://raw.githubusercontent.com/memejames/elerium-v2-ui-library//main/Library", true))()

local window = library:AddWindow("Beamed V2", {
    main_color = Color3.fromRGB(96, 96, 96), -- Color
    min_size = Vector2.new(510, 490), -- Size of the gui
    can_resize = true, -- true or false
})

local features = window:AddTab("Features") -- Name of tab
features:Show() -- shows the tab

features:AddLabel("Hello World!")
