local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
local window = BeamedV2:CreateWindow({
    Title = "Beamed V2",
    SubTitle = "by dawid",
    TabWidth = 160,
    Size = UDim2.fromOffset(580, 460),
    Acrylic = true,
    Theme = "Dark",
    MinimizeKey = Enum.KeyCode.LeftControl
})

local mainTab = window:AddTab("Main")

local MiscFolder = mainTab:AddFolder("Misc")

-- AutoFarm Button
MiscFolder:AddButton({
    Title = "AutoFarm weights (equip any farming tools)",
    Description = "Starts auto-farming with the selected tools",
    Callback = function()
        while true do
            local args = { [1] = "rep" }
            game:GetService("Players").LocalPlayer.muscleEvent:FireServer(unpack(args))
            game:GetService("RunService").RenderStepped:Wait()
        end
    end
})

-- Fast Weight Button
MiscFolder:AddButton({
    Title = "Fast weight (client side)(Unequip Weight first!)",
    Description = "Sets weight value to 0 for fast weight",
    Callback = function()
        game:GetService("Players").LocalPlayer.Backpack.Weight:FindFirstChildOfClass("NumberValue").Value = 0
    end
})

-- Teleport Positions
local teleportPositions = {
    Vector3.new(41.00082015991211, 7.25372314453125, 413.7836608886719),
    Vector3.new(-2569.714111328125, 7.253732681274414, -552.041259765625),
    Vector3.new(2202.354248046875, 7.253730773925781, 905.2389526367188),
    Vector3.new(-6710.41064453125, 7.253731727600098, -1458.2186279296875),
    Vector3.new(4663.82177734375, 1000.9722290039062, -3698.064208984375)
}

local function teleportToPositions()
    local player = game:GetService("Players").LocalPlayer
    local originalPosition = player.Character.HumanoidRootPart.Position

    for _, position in ipairs(teleportPositions) do
        player.Character.HumanoidRootPart.CFrame = CFrame.new(position)
        wait(1) -- Wait for 1 second at each position
    end

    player.Character.HumanoidRootPart.CFrame = CFrame.new(originalPosition)
end

-- Claim All Chest Button
MiscFolder:AddButton({
    Title = "Claim all chest",
    Description = "Teleports to predefined chest positions",
    Callback = function()
        teleportToPositions()
    end
})

-- Script Hub Label
MiscFolder:AddParagraph({
    Title = "----Script Hub----",
    Content = ""
})

-- Permanent Shiftlock Button
MiscFolder:AddButton({
    Title = "Permanent Shiftlock",
    Description = "Enables permanent shiftlock",
    Callback = function()
        loadstring(game:HttpGet('https://pastebin.com/raw/CjNsnSDy'))()
    end
})

-- Time Controls Section
MiscFolder:AddParagraph({
    Title = "----Time----",
    Content = ""
})

-- Morning Button
MiscFolder:AddButton({
    Title = "Morning",
    Description = "Sets game time to morning",
    Callback = function()
        game.Lighting.ClockTime = 7
    end
})

-- Daytime Button
MiscFolder:AddButton({
    Title = "Daytime",
    Description = "Sets game time to daytime",
    Callback = function()
        game.Lighting.ClockTime = 8
    end
})

-- Night Button
MiscFolder:AddButton({
    Title = "Night",
    Description = "Sets game time to night",
    Callback = function()
        game.Lighting.ClockTime = 5
    end
})

-- Farming Section Label
MiscFolder:AddParagraph({
    Title = "----Farming----",
    Content = ""
})

-- Auto Brawl Section
local AutoBrawlFolder = mainTab:AddFolder("Auto Brawl")

-- Auto Join Brawl (God Mode) Switch
AutoBrawlFolder:AddToggle({
    Title = "Auto Join Brawl (God mode)",
    Default = false,
    Callback = function(isOn)
        if isOn then
            _G.autobrawl = true
            repeat
                local args = { [1] = "joinBrawl" }
                game:GetService("ReplicatedStorage").rEvents.brawlEvent:FireServer(unpack(args))
                game:GetService("RunService").RenderStepped:Wait()
            until not _G.autobrawl
        else
            _G.autobrawl = false
        end
    end
})

-- Auto Join Brawl (For Farming) Switch
AutoBrawlFolder:AddToggle({
    Title = "Auto Join Brawl (For Farming)",
    Default = false,
    Callback = function(isOn)
        if isOn then
            _G.autobrawl = true
            repeat
                local args = { [1] = "joinBrawl" }
                game:GetService("ReplicatedStorage").rEvents.brawlEvent:FireServer(unpack(args))
                for i = 1, 60 do
                    if not _G.autobrawl then break end
                    wait(1)
                end
            until not _G.autobrawl
        else
            _G.autobrawl = false
        end
    end
})
